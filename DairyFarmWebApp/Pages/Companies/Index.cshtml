@page
@model DairyFarmWebApp.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>View All Companies</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Company</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr class="table-secondary">
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-secondary" asp-route-id="@item.CompanyID">Edit</a> |
                <a asp-page="./Details" class="btn btn-warning" asp-route-id="@item.CompanyID">Details</a> |
                <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.CompanyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
