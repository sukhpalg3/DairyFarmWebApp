@page
@model DairyFarmWebApp.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>View All Orders</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr class="table-secondary">
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-secondary" asp-route-id="@item.OrderID">Edit</a> |
                <a asp-page="./Details" class="btn btn-warning" asp-route-id="@item.OrderID">Details</a> |
                <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.OrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
