@page
@model DairyFarmWebApp.Categories.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Category Details</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.CategoryID" />
            <div class="form-group">
                <label asp-for="Category.CategoryCode" class="control-label"></label>
                <input asp-for="Category.CategoryCode" class="form-control" />
                <span asp-validation-for="Category.CategoryCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.CategoryName" class="control-label"></label>
                <input asp-for="Category.CategoryName" class="form-control" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Category Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">View All Category</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
