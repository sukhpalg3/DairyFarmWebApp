@page
@model DairyFarmWebApp.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>View All Category</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Category)
        {
            <tr class="table-secondary">
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-page="./Edit" class="btn btn-secondary" asp-route-id="@item.CategoryID">Edit</a> |
                    <a asp-page="./Details" class="btn btn-warning"  asp-route-id="@item.CategoryID">Details</a> |
                    <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.CategoryID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
